{{> header}}
				<div class="m-grid__item m-grid__item--fluid m-wrapper">

					<div class="m-content">
						{{#if error}}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							</button>
							<strong>Oh snap!</strong> {{error}}
						</div>
						{{/if}}
            {{#if success}}
						<div class="alert alert-success alert-dismissible fade show" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							</button>
							<strong>Success!</strong> {{success}}
						</div>
						{{/if}}
              <div class="row">
								<div class="col-lg-4">
                  <div class="m-portlet m-portlet--tab">
                      <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                          <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                              <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                              Expense Graph
                            </h3>
                          </div>
                        </div>
                      </div>
                      <div class="m-portlet__body">
                        <div id="m_flotcharts_9" style="height: 300px;"></div>
                      </div>
                    </div>
                  </div>
									<div class="col-lg-4">
			  							<div class="m-portlet m-portlet--tab">
			  									<div class="m-portlet__head">
			  										<div class="m-portlet__head-caption">
			  											<div class="m-portlet__head-title">
			  												<span class="m-portlet__head-icon m--hide">
			  													<i class="la la-gear"></i>
			  												</span>
			  												<h3 class="m-portlet__head-text">
			  													BudgetWise Profile
			  												</h3>
			  											</div>
			  										</div>
			  									</div>
			  									<div class="m-portlet__body">
			  										<div id=""></div>
			  									</div>
			  								</div>



			  							</div>

								<div class="col-xl-4">

	                <div class="m-portlet">
	                  <div class="m-portlet__head">
	                    <div class="m-portlet__head-caption">
	                      <div class="m-portlet__head-title">
	                        <span class="m-portlet__head-icon m--hide">
	                          <i class="la la-gear"></i>
	                        </span>
	                        <h3 class="m-portlet__head-text">
	                          Information for '{{budget.name}}' Budget
	                        </h3>
	                      </div>
	                    </div>
	                  </div>

	                  <!--begin::Form-->
	                  <form class="m-form" method="post">
	                    <div class="m-portlet__body">
	                      <div class="m-form__section m-form__section--first">
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Name</label>
	                          <input type="text" class="form-control m-input" disabled="" value="{{budget.name}}">
	                        </div>
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Allowance</label>
	                          <input type="number" class="form-control m-input" disabled="" id="allowance" value="{{budget.allowance}}">
	                        </div>
                          <div class="form-group m-form__group">
                            <label for="exampleSelect2">Individuals</label>
                            <select multiple="" disabled="true" class="form-control m-input" name="individualChoice" id="exampleSelect2">
                              {{#each individuals}}
                              <option value="{{id}}">{{name}}: Expense: {{expense}} // Maximum Allowance: {{allowance}}</option>
                              {{/each}}
                            </select>
                          </div>
	                      </div>
	                    </div>
	                    <div class="m-portlet__foot m-portlet__foot--fit">
	                      <div class="m-form__actions m-form__actions">
	                        <a href="/dashboard" class="btn btn-secondary">Return to Dashboard</a>
	                      </div>
	                    </div>
	                  </form>

	                  <!--end::Form-->
	                </div>
	              </div>
            </div>
						<!--End::Main Portlet-->
					</div>
				</div>
        
			{{> footer}}

