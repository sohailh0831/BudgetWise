{{> header}}
				<div class="m-grid__item m-grid__item--fluid m-wrapper">

					<div class="m-content">
						{{#if error}}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							</button>
							<strong>Oh snap!</strong> {{error}}
						</div>
						{{/if}}
            {{#if success}}
						<div class="alert alert-success alert-dismissible fade show" role="alert">
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							</button>
							<strong>Success!</strong> {{success}}
						</div>
						{{/if}}
              <div class="row">
							<div class="col-lg-12">

								<!--begin::Portlet-->
								<div class="m-portlet m-portlet--tab">
									<div class="m-portlet__head">
										<div class="m-portlet__head-caption">
											<div class="m-portlet__head-title">
												<span class="m-portlet__head-icon m--hide">
													<i class="la la-gear"></i>
												</span>
												<h3 class="m-portlet__head-text" margin-right: 50px>
                          Spending by Category
                        </h3>
											</div>
                      <script>
                        window.fbAsyncInit = function() {
                          FB.init({
                            appId            : '398735490904215',
                            autoLogAppEvents : true,
                            xfbml            : true,
                            version          : 'v2.10'
                          });
                          FB.AppEvents.logPageView();
                        };

                        (function(d, s, id){
                           var js, fjs = d.getElementsByTagName(s)[0];
                           if (d.getElementById(id)) {return;}
                           js = d.createElement(s); js.id = id;
                           js.src = "//connect.facebook.net/en_US/sdk.js";
                           fjs.parentNode.insertBefore(js, fjs);
                         }(document, 'script', 'facebook-jssdk'));
                      </script>
                      <div id="fb-root"></div>
                      <script async defer src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2"></script>
                      <div class="fb-share-button" data-href="http://167.99.156.25/dashboard" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F167.99.156.25%2Fdashboard&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>
										</div>
									</div>
									<div id="spending_graph" class="m-portlet__body">
										<div id="m_morris_2" style="height:500px;"></div>
									</div>
								</div>

								<!--end::Portlet-->
							</div>
						</div>
              <div class="row">
								<div class="col-lg-4">
                  <div class="m-portlet m-portlet--tab">
                      <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                          <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                              <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                              Expense Graph
                            </h3>
                          </div>
                        </div>
                      </div>
                      <div class="m-portlet__body">
                        <div id="m_flotcharts_8" style="height: 300px;"></div>
                      </div>
                    </div>
                  </div>
									<div class="col-lg-4">
			  							<div class="m-portlet m-portlet--tab">
			  									<div class="m-portlet__head">
			  										<div class="m-portlet__head-caption">
			  											<div class="m-portlet__head-title">
			  												<span class="m-portlet__head-icon m--hide">
			  													<i class="la la-gear"></i>
			  												</span>
			  												<h3 class="m-portlet__head-text">
			  													BudgetWise Profile
			  												</h3>
			  											</div>
			  										</div>
			  									</div>
			  									<div class="m-portlet__body">
			  										<div id=""></div>
			  									</div>
			  								</div>



			  							</div>

								<div class="col-xl-4">

	                <div class="m-portlet">
	                  <div class="m-portlet__head">
	                    <div class="m-portlet__head-caption">
	                      <div class="m-portlet__head-title">
	                        <span class="m-portlet__head-icon m--hide">
	                          <i class="la la-gear"></i>
	                        </span>
	                        <h3 class="m-portlet__head-text">
	                          Information for '{{budget.name}}' Budget
	                        </h3>
	                      </div>
	                    </div>
	                  </div>

	                  <!--begin::Form-->
	                  <form class="m-form" method="post">
	                    <div class="m-portlet__body">
	                      <div class="m-form__section m-form__section--first">
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Name</label>
	                          <input type="text" class="form-control m-input" disabled="" value="{{budget.name}}">
	                        </div>
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Allowance</label>
	                          <input type="number" class="form-control m-input" disabled="" id="allowance" value="{{budget.allowance}}">
	                        </div>
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Spenditure</label>
	                          <input type="number" class="form-control m-input" disabled="" id="spenditure" value="{{budget.amountSpent}}">
	                        </div>
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget Start Date</label>
	                          <input type="date" class="form-control m-input" disabled="" value="{{budget.startDate}}">
	                        </div>
	                        <div class="form-group m-form__group">
	                          <label for="example_input_full_name">Budget End Date</label>
	                          <input type="date" class="form-control m-input" disabled="" value="{{budget.endDate}}">
	                        </div>
	                      </div>
	                    </div>
	                    <div class="m-portlet__foot m-portlet__foot--fit">
	                      <div class="m-form__actions m-form__actions">
	                        <a href="/dashboard" class="btn btn-secondary">Return to Dashboard</a>
	                      </div>
	                    </div>
	                  </form>

	                  <!--end::Form-->
	                </div>
	              </div>
            </div>
						<!--End::Main Portlet-->
					</div>
				</div>
			{{> footer}}
